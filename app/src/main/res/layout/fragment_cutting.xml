<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cutting">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16sp">

        <TextView
            android:id="@+id/txtFontCutting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Awesome"
            android:textSize="50dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtFontCuttingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cutting"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtFontCutting"
            android:layout_margin="6sp"/>

        <EditText
            android:id="@+id/edtCutting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the cutting rate"
            android:inputType="number"
            android:singleLine="true"
            android:layout_below="@+id/txtFontCuttingText"/>

        <Button
            android:id="@+id/btnGetCutting"
            android:layout_width="230sp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_below="@+id/edtCutting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"/>

    </RelativeLayout>

</FrameLayout>