<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJob">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp">

        <TextView
            android:id="@+id/txtFontBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontAwesome"
            android:textSize="40dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtBookText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Job Type"
            android:textColor="#000000"
            android:layout_below="@+id/txtFontBook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"/>

        <TextView
            android:id="@+id/txtHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of the Job"
            android:textColor="#000000"
            android:layout_below="@+id/txtBookText"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"/>

        <EditText
            android:id="@+id/edtJobType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title of the book *"
            android:singleLine="true"
            android:layout_below="@+id/txtHint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"/>

        <Button
            android:id="@+id/btnAddJobType"
            android:layout_width="230sp"
            android:layout_height="wrap_content"
            android:text="Add new book"
            android:layout_below="@+id/edtJobType"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"/>

    </RelativeLayout>

</FrameLayout>