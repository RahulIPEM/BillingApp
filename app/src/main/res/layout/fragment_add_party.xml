<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddParty">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp">

            <TextView
                android:id="@+id/txtFontParty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Awesome"
                android:textSize="40dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txtAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Party"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="16sp"
                android:textColor="#000000"
                android:layout_below="@+id/txtFontParty"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/edtPartyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Party's Name"
                android:singleLine="true"
                android:layout_below="@+id/txtAdd"
                android:layout_margin="6sp"/>

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Party's Address"
                android:layout_below="@+id/edtPartyName"
                android:singleLine="true"
                android:layout_margin="6sp"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnerState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintText="Select State"
                android:layout_below="@+id/edtAddress"
                android:layout_margin="6sp"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnerDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintText="Select District"
                android:layout_below="@+id/spinnerState"
                android:layout_margin="6sp"/>

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile number"
                android:layout_below="@+id/spinnerDistrict"
                android:singleLine="true"
                android:layout_margin="6sp"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:layout_below="@+id/edtMobile"
                android:singleLine="true"
                android:layout_margin="6sp"/>

            <EditText
                android:id="@+id/edtTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter phone number"
                android:layout_below="@+id/edtEmail"
                android:singleLine="true"
                android:layout_margin="6sp"/>

            <Button
                android:id="@+id/btnAddParty"
                android:layout_width="230sp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_below="@+id/edtTelephone"
                android:layout_centerHorizontal="true"
                android:layout_margin="6sp"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>